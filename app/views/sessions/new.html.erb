<h1>Log In</h1>

<%= form_tag sessions_path, :class => "well" do %>
 	<%= label_tag :email %>
	<%= text_field_tag :email, params[:email] %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <label class="checkbox">
    	<%= check_box_tag :remember_me, 1, params[:remember_me] %> Remember Me
  	</label>

  	<%= submit_tag "Log In", :class => "btn" %>

  	<p><br><%= link_to "forgot your password?", new_password_reset_path %></p>
<% end %>

