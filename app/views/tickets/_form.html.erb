<%= simple_form_for(@ticket) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs form-horizontal">
    <%= f.input :summary, :input_html => { :maxlength => 100, :class => "input-xlarge" } %>
    <%= f.input :details, :input_html => { :rows => 7, :class => "input-xlarge" } %>
    <%= f.input :priority, :collection => priorities, :as => :radio_buttons %>
    <%= f.input :status, :collection => statuses %>
    <%= f.input :assignee_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
